---
import { getI18N } from '@/i18n/index'
import { Image } from 'astro:assets'
import Container from './Container.astro'
import SocialMediaLinks from './SocialMediaLinks.astro'

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<Container>
	<section class='flex flex-col items-center justify-center pt-10 lg:flex-row lg:pt-16'>
		<div class='size-full flex-1 pr-4'>
			<h1
				class='bg-gradient-to-r from-[#b16cea] from-10% via-[#ff5e69] via-30% to-[#ffa84b] to-90% bg-clip-text font-GilroyBold text-4xl tracking-tight text-transparent lg:text-7xl'
			>
				{i18n.hero.title}
			</h1>
			<h2 class='text-balance font-GilroyBold text-3xl lg:text-5xl'>
				{i18n.hero.title_2}
			</h2>
			<p class='pt-4 font-GilroyRegular text-base text-neutral-500 lg:text-xl'>
				{i18n.hero.subtitle}
			</p>
			<div>
				<SocialMediaLinks />
			</div>
		</div>
		<div class='h-auto w-full select-none grayscale lg:w-[550px]'>
			<Image src='/me.png' alt='Fabian Herrera photo' width={1000} height={1000} />
		</div>
	</section>
</Container>
