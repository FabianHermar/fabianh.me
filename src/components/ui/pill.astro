---
interface Props {
	text: string
	image: string
}

const { text, image } = Astro.props
---

<span
	class='inline-flex select-none items-center justify-center space-x-2 whitespace-nowrap rounded-full border border-neutral-200 bg-white px-3 py-1.5 font-GilroySemibold text-xs'
>
	<img src={image} alt={text} class='mr-2 inline-block size-4' />
	{text}
</span>
