---
 import Container from '@/components/Container.astro'
 import ExperienceCard from './ExperienceCard.astro'
 import GradualSpacing from '@/components/ui/gradual-spacing'
import Toast from '@/components/ui/Toast'

---

<Container>
	<div class='flex h-10 pt-10 mb-8 justify-center items-center' id="experience">
		<span class='md:text-4xl font-GilroyBold text-2xl font-bold text-neutral-500'>01. &nbsp;</span>
		<GradualSpacing
			className="md:text-4xl  font-GilroyBold text-2xl font-bold text-black"
			text="Where I've worked"
			client:visible
		/>
		<span class="ml-[0.6em] mt-1 h-0.5 grow translate-y-full bg-neutral-400"></span>
	</div>
	<div class="pt-10">
		<ol class="relative border-s-2 border-neutral-400">
			<li class="mb-10 ms-4">
				<div class="absolute w-3 h-3 bg-[#ff5e69] rounded-full mt-1.5 -start-[6.5px] border border-white"></div>
				<ExperienceCard
					link='https://boxode.org'
					target='_blank'
					title='Co-founder & Principal Frontend Developer &bull; Boxode'
					location='Aguascalientes, México &bull; Remote'
					duration='Abril 2023 - Julio 2024 | Jornada Parcial'
					ContainerStyles="md:hover:bg-[#ffe1e3]/50"
					textStyles="group-hover:text-[#ff5e69]"
					phase=`"Cada paso fuera de la zona de confort te acerca más a tus metas."`
					description='Test description'
					description2="Test description 2"
					technologies={[
						{ text: 'Resiliencia', image: '/svg/resilience.svg'},
						{ text: 'Next.JS', image: '/svg/nextjs.svg'},
						{ text: 'MongoDB', image: '/svg/mongodb.svg'},
						{ text: 'TypeScript', image: '/svg/typescript.svg'},
						{ text: 'ExpressJS', image: '/svg/expressjs.svg'}
					]}
				/>
			</li>
			<li class="mb-10 ms-4">
				<div class="absolute w-3 h-3 bg-[#b16cea] rounded-full mt-1.5 -start-[6.5px] border border-white"></div>
				<ExperienceCard
					link={null}
					target={null}
					title='Servicio Técnico de Sistemas &bull; CompuCel'
					location='Cuauhtémoc, ZAC, México &bull; Presencial'
					duration='Noviembre 2022 - Febrero 2023 | Contrato Temporal'
					description='Test description'
					description2="Test description 2"
					ContainerStyles="md:hover:bg-[#f4eafd]/50"
					textStyles="group-hover:text-[#c38ff1]"
					technologies={[
						{ text: 'Resolución de Problemas', image: '/svg/wrench.svg'},
						{ text: 'Comunicación', image: '/svg/communication.svg'},
						{ text: 'Gestión del tiempo', image: '/svg/clock.svg'},
						{ text: 'Identificación del problema', image: '/svg/attention.svg'}
					]}
				/>
			</li>
			<li class="mb-10 ms-4">
				<div class="absolute w-3 h-3 bg-[#ffa84b] rounded-full mt-1.5 -start-[6.5px] border border-white"></div>
				<ExperienceCard
					link={null}
					target={null}
					title='Becario de Desarrollo de Software &bull; INBAC Instituto Niels Bohr'
					location='San Francisco de los Romo, AGS, México &bull; Remoto'
					duration='Marzo 2022 - Agosto 2022 | Contrato Temporal'
					ContainerStyles="md:hover:bg-[#fff0d4]/50"
					textStyles="group-hover:text-[#ffa84b]"
					description='Test description'
					description2="Test description 2"
					technologies={[
						{ text: 'Pensamiento Analítico', image: '/svg/brain.svg'},
						{ text: 'PHP', image: '/svg/php.svg'},
						{ text: 'MySQL', image: '/svg/mysql.svg'},
						{ text: 'JavaScript', image: '/svg/javascript.svg'}
					]}
				/>
			</li>
		</ol>
	</div>
</Container>